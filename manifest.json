{
    "manifest_version": 3,
    "name": "Date Converter",
    "version": "1.0",
    "description": "Convert Gregorian dates to Jalali (and vice versa).",
    "permissions": ["contextMenus", "scripting"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["jalaali.js", "content.js"],
        "css": ["style.css"]
      }
    ]
  }
  